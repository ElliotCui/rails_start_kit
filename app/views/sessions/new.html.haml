.container
  .row
    .col-md-4.col-md-offset-4
      .login-panel.panel.panel-default
        .panel-heading
          %h3.panel-title 欢迎
        .panel-body
          %form{:action => login_path, :method => "post", :name => "login-form"}
            %fieldset
              - if flash[:notice].present?
                .alert.alert-warning{:role => "alert"}= flash[:notice]
              - elsif flash[:alert].present?
                .alert.alert-danger{:role => "alert"}= flash[:alert]
              .form-group
                %input#email.form-control{:placeholder => "请输入工作邮箱", :type => "email", name: :email}/
              .form-group
                %input#password.form-control{:placeholder => "请输入密码", :type => "password", name: :password}/
              / Change this to a button or input when using this as a form
              %button.btn.btn-lg.btn-success.btn-block{:name => "Submit", :type => "Submit", :value => "Login"} 登录